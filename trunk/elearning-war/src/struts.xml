<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	
	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<default-action-ref name="index" />
		<action name="index">
			<result type="tiles">base</result>
		</action>
		
	</package>
	
	<package name="pages" namespace="/pages" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="register" class="com.elearning.front.actions.RegisterAction">
			<result name="input" type="tiles">.register</result>
			<result name="success" type="tiles">.register</result>
		</action>

		<action name="login" class="com.elearning.front.actions.LoginAction"
			method="login">
			<result name="success">index.jsp</result>
			<result name="error">login.jsp</result>
			<result name="input">login.jsp</result>
		</action>
		
		<action name="translate" class="com.elearning.front.actions.Locale">
			<result name="success">index.jsp</result>
		</action>
	</package>
	
	<package name="admin" namespace="/admin" extends="struts-default">
	
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="default" class="com.elearning.admin.actions.TeacherAction">
			<result name="success" type="tiles">.dashbord</result>
		</action>
		
		<action name="list" class="com.elearning.admin.actions.TeacherAction" method="list">
			<result name="success" type="tiles">.list</result>
		</action>
		
<!-- 		<action name="redirectForm" class="com.elearning.admin.actions.TeacherAction"> -->
<!-- 			<result name="input" type="tiles">.add</result> -->
<!-- 		</action> -->

		<action name="create" class="com.elearning.admin.actions.TeacherAction" method="save"> 
			<result name="success" type="redirect">list</result>
			<result name="input" type="tiles">.add</result>
		</action>
		
		<action name="edit" class="com.elearning.admin.actions.TeacherAction" method="edit"> 
			<result name="success" type="redirect">list</result>
			<result name="success" type="tiles">.add</result>
		</action>
		
		<action name="delete" class="com.elearning.admin.actions.TeacherAction" method="remove"> 
			<result name="success" type="redirect">list</result>
		</action>
		
		<action name="batch" class="com.elearning.admin.actions.TeacherAction" method="batch"> 
			<result name="success" type="redirect">list</result>
		</action>
		
	</package>
	
</struts>