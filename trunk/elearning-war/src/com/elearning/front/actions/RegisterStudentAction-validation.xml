<validators>
	<field name="username">
		<field-validator type="requiredstring">
			<message key="Le nom d'utilisateur est obligatoire" />
		</field-validator>
	</field>
	
	<field name="password">
		<field-validator type="requiredstring">
			<message key="Le mot de passe est obligatoire" />
		</field-validator>
	</field>

	<field name="confirmPassword">
		<field-validator type="requiredstring">
			<message key="Vous devez confirmer votre mot de passe" />
		</field-validator>
	</field>

	<field name="email">
		<field-validator type="requiredstring">
			<message>L'adresse email est obligatoire</message>
		</field-validator>
		<field-validator type="email" short-circuit="true">
			<message key="email.error" />
		</field-validator>
	</field>
	
	<field name="sex">
          <field-validator type="required">
              <message>Selectionnez votre genre pour continuer</message>
          </field-validator>
	</field>
	
