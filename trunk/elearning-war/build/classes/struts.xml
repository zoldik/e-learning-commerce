<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">
  
 <struts>
 	<constant name="struts.devMode" value="true" />
   	<constant name="struts.custom.i18n.resources" value="global" />
   	
	<package name="pages" namespace="/pages" extends="struts-default">
		<action name="register" class="com.test.actions.RegisterAction">
			<result name="input">register.jsp</result>
			<result name="success">result.jsp</result>
		</action>
		
		<action name="login" class="com.test.actions.LoginAction" method="login">
			<result name="success">index.jsp</result>
			<result name="error">login.jsp</result>
			<result name="input">login.jsp</result>
		</action>
		<action name="translate" class="com.test.actions.Locale">
			<result name="success">index.jsp</result>	
		</action>
	</package>
 </struts>